{# home/index.twig #}

{% extends 'base.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="../../public/css/dashboard.css">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="../../public/js/dashboard.js"></script>
{% endblock %}

{% block content %}
    <div class="dashboard">
        <div class="dashboard-title col-12">Список новостей</div>

        {% if news|length > 0 %}
            {% for new in news %}
                <div class="row new-row col-12">
                    {{ include('layers/new_item.twig') }}
                </div>
            {% endfor %}
        {% else %}
            <div class="row">
                <div class="new-empty col-12">
                    Новостей нет
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
